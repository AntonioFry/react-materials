{
  "name": "@icedesign/ts-scaffold",
  "version": "3.0.1",
  "description": "该模板基于 TypeScript，适用于从 0 到 1 开始搭建项目，内置基础的页面，路由和菜单展示",
  "files": [
    "src/",
    "build/",
    "public/",
    "tests/",
    "_gitignore",
    "_editorconfig",
    "_eslintignore",
    "_eslintrc.js",
    "_stylelintignore",
    "_stylelintrc.js",
    "tsconfig.json",
    "build.json",
    "jsconfig.json"
  ],
  "dependencies": {
    "@alifd/next": "^1.x",
    "@icedesign/theme": "^1.x",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.2",
    "moment": "^2.23.0",
    "prop-types": "^15.5.8",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^5.0.1"
  },
  "devDependencies": {
    "@alib/build-scripts": "^0.1.5",
    "@ice/spec": "^0.1.1",
    "build-plugin-fusion": "^0.1.0",
    "build-plugin-ice-app": "^0.1.4",
    "build-plugin-moment-locales": "^0.1.0",
    "css-modules-typescript-loader": "^2.0.4",
    "eslint": "^6.0.1",
    "stylelint": "^10.1.0"
  },
  "scripts": {
    "start": "build-scripts start",
    "build": "build-scripts build",
    "prepublishOnly": "npm run build",
    "lint": "npm run eslint && npm run stylelint",
    "eslint": "eslint --cache --ext .js,.jsx ./",
    "stylelint": "stylelint ./**/*.scss"
  },
  "publishConfig": {
    "access": "public"
  },
  "scaffoldConfig": {
    "builder": "ice-scripts",
    "name": "ts-scaffold",
    "title": "ICE TypeScript Starter",
    "categories": [
      "基础模板"
    ],
    "screenshot": "https://img.alicdn.com/tfs/TB13AFlH6TpK1RjSZKPXXa3UpXa-2860-1580.png"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "iceworks": {
    "type": "react",
    "adapter": "adapter-react-v3"
  },
  "ideMode": {
    "name": "ice-react"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ice-lab/react-materials/tree/master/scaffolds/ice-ts"
  }
}
